{
	"lineNumbers": true,
	"matchBrackets": true,
	"dragDrop": false,
	"autoCloseBrackets": true,
    "autoCloseTags": true,
	"gutters": ["CodeMirror-linenumbers", "CodeMirror-foldgutter", "CodeMirror-lint-markers"],
	"indentUnit": 4,
	"tabSize": 4,
	"mode": "haxe",
	"lineWrapping": true,
	//"highlightSelectionMatches": {"showToken": "regexp\\w"},
	"foldGutter": {"rangeFinder": "evalnew CodeMirror.fold.combine(CodeMirror.fold.brace, CodeMirror.fold.comment)"},
	"showCursorWhenSelecting": true,
	"keyMap": "sublime",
    //"vimMode": true,
	//"keyMap": "vim",
	"lint": true,
    "matchTags": 
    {
    	"bothTags": true
    }
}